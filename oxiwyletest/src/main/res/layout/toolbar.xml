<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:toucharea="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_main_2160x3840">

    <com.mihailovalex.oxiwyletest.IrregularButton
        android:id="@+id/menu_btn"
        android:layout_width="193dp"
        android:layout_height="99dp"
        android:background="@drawable/button_menu"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.139"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.317"
        toucharea:toucharea="@array/touch_area_btnmenu">

    </com.mihailovalex.oxiwyletest.IrregularButton>

    <com.mihailovalex.oxiwyletest.IrregularButton
        android:id="@+id/shop_btn"
        android:layout_width="193dp"
        android:layout_height="99dp"
        android:background="@drawable/button_shop"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu_btn"
        app:layout_constraintVertical_bias="0.0"
        toucharea:toucharea="@array/touch_area_btnshop">

    </com.mihailovalex.oxiwyletest.IrregularButton>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/tb_ph_flag" />

    <com.mihailovalex.oxiwyletest.IrregularButton
        android:id="@+id/pause_btn"
        android:layout_width="218dp"
        android:layout_height="118dp"
        android:background="@drawable/button_pause"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/normal_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31"
        toucharea:toucharea="@array/touch_area_btnshop"></com.mihailovalex.oxiwyletest.IrregularButton>

    <com.mihailovalex.oxiwyletest.IrregularButton
        android:id="@+id/normal_btn"
        android:layout_width="201dp"
        android:layout_height="102dp"
        android:background="@drawable/button_normal"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53"
        toucharea:toucharea="@array/touch_area_btnshop"></com.mihailovalex.oxiwyletest.IrregularButton>

    <com.mihailovalex.oxiwyletest.IrregularButton
        android:id="@+id/accelerate_btn"
        android:layout_width="216dp"
        android:layout_height="110dp"
        android:background="@drawable/button_accelearate"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/normal_btn"
        app:layout_constraintVertical_bias="0.744"
        toucharea:toucharea="@array/touch_area_btnshop"></com.mihailovalex.oxiwyletest.IrregularButton>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="234dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/normal_btn"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.088"
        tools:srcCompat="@drawable/tb_ph_date" />

    <TextView
        android:layout_width="186dp"
        android:layout_height="44dp"
        android:fontFamily="@font/unifrakturmaguntia"
        android:text="01.01.1917"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.02" />
</androidx.constraintlayout.widget.ConstraintLayout>